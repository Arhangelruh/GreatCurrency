                        <div class="dropdown-content">
                            <a class="nav-button" asp-controller="City" asp-action="Cities">
                                  <div class="nav-button">Города</div>
                            </a>
                            <a class="nav-button" asp-controller="Home" asp-action="DeleteData">
                                <div class="nav-button">Удаление старых данных</div>
                            </a>
                            <a class="nav-button" asp-controller="ServiceRates" asp-action="Services">
                                <div class="nav-button">Сервисы</div>
                            </a>
                        </div>
                    </div>                                                                        
                  </div> *@       
            </div>
        </div>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    @RenderSection("js", false)    
</body>
</html>