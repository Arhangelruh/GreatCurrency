                    <li class="nav-item">
                        <form method="get" asp-controller="Home" asp-action="Index">
                            <button class="nav-item-botton" type="submit" title="Index">Физ. лица</button>
                        </form>                        
                    </li>
                    <li class="nav-item">
                        <form method="get" asp-controller="LegalRates" asp-action="LegalRates">
                            <button class="nav-item-botton" type="submit" title="Index">Юр. лица</button>
                        </form>
                    </li>
                  </ul>
